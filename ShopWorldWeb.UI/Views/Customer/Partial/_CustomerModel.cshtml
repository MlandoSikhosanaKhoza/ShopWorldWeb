@model UI.Models.CustomerModel


    <div class="col-md-12 row pl-3">
            <input type="hidden" asp-for="CustomerId" />
            <div class="form-group col-md-4">
                <label asp-for="Mobile" class="control-label"></label>
                <input asp-for="Mobile" class="form-control customer-input col-sm-12" />
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control customer-input col-sm-12" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control customer-input col-sm-12" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
    </div>

