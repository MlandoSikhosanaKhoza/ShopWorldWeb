@model CustomerLoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_FrontLayout.cshtml";
}
<header id="header">
    <div class="container-fluid d-flex justify-content-between align-items-center">

        <div class="logo">
            <a href="/"><img src="~/image/front/shop_world_small.png" alt="" class="img-fluid"></a>
        </div>

        <div class="contact-link float-right">
            <a href="~/Home/Index">Home</a>
            <a href="~/Home/Login">Login</a>
            <a href="~/Home/SignUp" class="scrollto">Sign up</a>
        </div>

    </div>
</header>
<section id="hero">
    <div class="hero-container">
        <h1>Login</h1>
        <form asp-action="Login">
            <div class="form-group col-md-12">
                <label asp-for="Mobile" class="control-label text-white"></label>
                <input asp-for="Mobile" class="form-control customer-input col-sm-12" />
                <span asp-validation-for="Mobile" class="text-danger bg-white"></span>
            </div>
            <button class="btn btn-primary mt-3">Login</button>
        </form>
        <div class="text-center mt-3">
            <a asp-action="LoginAsUser" class="badge badge-dark">Continue without Login</a>
        </div>
    </div>
</section>
