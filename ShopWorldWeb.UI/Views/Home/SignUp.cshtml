@model CustomerModel
@{
    ViewData["Title"] = "Sign Up";
    Layout = "~/Views/Shared/_FrontLayout.cshtml";
}
<header id="header">
    <div class="container-fluid d-flex justify-content-between align-items-center">

        <div class="logo">
            <a href="~/"><img src="~/image/front/shop_world_small.png" alt="" class="img-fluid"></a>
            <!-- Uncomment below if you prefer to use an image logo -->
            <!-- <a href="index.html"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->
        </div>

        <div class="contact-link float-right">
            <a href="~/Home/Index">Home</a>
            <a href="~/Home/Login">Login</a>
            <a href="~/Home/SignUp" class="scrollto">Sign up</a>
        </div>

    </div>
</header>
<section id="hero">
    <div class="hero-container">
        <h1>Sign up</h1>
        <div class="countdown d-none" data-count="2023/12/3" data-template="%d days %h:%m:%s"></div>
        <form asp-action="SignUp">
            <input type="hidden" asp-for="CustomerId" />
            <div class="form-group col-md-12">
                <label asp-for="Mobile" class="control-label text-white"></label>
                <input asp-for="Mobile" class="form-control customer-input col-sm-12" />
                <span asp-validation-for="Mobile" class="text-danger bg-white"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Name" class="control-label text-white"></label>
                <input asp-for="Name" class="form-control customer-input col-sm-12" />
                <span asp-validation-for="Name" class="text-danger bg-white"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Surname" class="control-label text-white"></label>
                <input asp-for="Surname" class="form-control customer-input col-sm-12" />
                <span asp-validation-for="Surname" class="text-danger bg-white"></span>
            </div>
            <button class="btn btn-primary mt-3">Sign Up</button>
        </form>
    </div>
</section>
